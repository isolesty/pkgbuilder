#! /bin/bash

declare -r BASEURI=https://cr.deepin.io
declare -r SVERSION="v0.1.5"
declare -i CHANGELIST=

declare BOPTS=
declare PKGVER=
declare ARCH=$(dpkg-architecture -qDEB_HOST_ARCH)
declare DBPKGOPTS="-us -uc -sa -j8"

declare -ra ARCHITECTURES=(
    mipsel
    mips64el
)
declare -rA DISTRIBUTIONS=(
    ['mipsel']='unstable'
    ['mips64el']='testing'
)

declare -r scriptdir=$(dirname $(readlink -ef $0))
declare -r WORKBASE=${scriptdir%/*}
declare -r REPOBASE=${WORKBASE}/git-repos
